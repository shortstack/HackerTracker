<resources>

    <style name="Theme.WtfPreference" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference
        </item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>


    </style>

    <style name="PreferenceScreen" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"></style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="preferenceTheme">@style/Theme.WtfPreference</item>

        <item name="android:checkboxStyle">@style/checkBoxStyle</item>

        <!-- Preferences-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_alpha</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="page">
        <item name="android:background">@color/item_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="row_nav">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/row_text_color</item>
        <!--<item name="android:background">@color/background</item>-->
    </style>

    <style name="card_item_text">
        <!-- Layout -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Style-->
        <item name="android:textColor">@color/white_alpha</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="card_item_text.small" parent="card_item_text">
          <!-- Style -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="card_item_text.category" parent="card_item_text.small">
        <!-- Layout -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">5dp</item>    </style>


    <style name="details_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorLink">@color/light_gray</item>
    </style>

    <style name="details_title">
        <item name="android:padding">10dp</item>
    </style>

    <style name="details_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="details_label">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="details_speaker">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="details_time">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="details_date">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="details_where">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@color/light_gray</item>
    </style>

    <style name="details_forum">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorLink">@color/green</item>
    </style>

    <style name="details_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/border_top_green</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/item_background</item>
    </style>

    <style name="MyTitleTextStyle">
        <item name="android:textAppearance">@style/titleTextStyle</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="checkBoxStyle" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
