<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="row_nav">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@drawable/row_text_color</item>
    </style>
    <style name="list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:divider">@color/white_alpha</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    </style>
    <style name="title">
        <item name="android:textColor">@drawable/row_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="date">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="scroll_view">
        <item name="android:scrollbars">vertical</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    </style>
    <style name="button_map">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_states_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="where">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorLink">@color/light_gray</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/light_gray</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="icon">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="star">
        <item name="android:background">@drawable/button_green_rounded</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">9dp</item>
    </style>
    <style name="share">
        <item name="android:background">@drawable/button_green_rounded</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">9dp</item>
    </style>
    <style name="detailsAnimation">
        <item name="android:windowEnterAnimation">@anim/details_down</item>
        <item name="android:windowExitAnimation">@anim/details_up</item>
    </style>
    <style name="detailsLayout">
        <item name="android:background">@drawable/black_squared</item>
    </style>
    <style name="details_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColorLink">@color/light_gray</item>
    </style>
    <style name="details_title">
        <item name="android:padding">10dp</item>
    </style>
    <style name="details_title_text">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="details_label">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="details_speaker">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="details_time">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="details_date">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="details_where">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorLink">@color/light_gray</item>
    </style>
    <style name="details_forum">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorLink">@color/green</item>
    </style>
    <style name="details_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/border_top_green</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">16dp</item>
    </style>



    <style name="vendor_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="vendor_title">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="vendor_website">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorLink">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="vendor_body">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="vendor_logo">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="dialog_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="dialog_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorLink">@color/green</item>
    </style>
    <style name="dialog_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/border_top_green_trans</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>
