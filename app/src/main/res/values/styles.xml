<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/bubble</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorSecondary">@color/purple_dark</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>

        <item name="android:checkboxStyle">@style/AppCheckBoxStyle</item>

        <item name="android:buttonStyle">@style/buttonStyle</item>

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppCompatDialog</item>
        <item name="alertDialogTheme">@style/AppCompatAlert</item>

        <item name="checkboxStyle">@style/AppCheckBoxStyle</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Used for Filter View -->
    <style name="MyAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
        <!-- Used for the buttons -->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--Used for the title and text -->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!-- Used for the background -->
        <!--<item name="android:background">@color/background</item>-->

        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="windowTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Generic Dialog Theme -->
    <style name="AppCompatDialog" parent="Theme.AppCompat.Dialog">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/background</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AppCompatAlert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">?colorPrimary</item>
        <!-- Used for the background -->
        <item name="android:background">?android:colorBackground</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <!-- Individual element styles. -->

    <style name="Label" parent="TextAppearance.AppCompat.Body2">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Body" parent="TextAppearance.AppCompat.Body1">
        <!--<item name="android:textColor">@android:color/white_90</item>-->
        <item name="android:alpha">0.90</item>
    </style>

    <style name="Paragraph" parent="Body">
        <item name="android:layout_marginTop">@dimen/paragraph_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/paragraph_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/paragraph_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/paragraph_horizontal_margin</item>
        <item name="android:lineSpacingExtra">@dimen/paragraph_line_spacing_extra</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="Card">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored
        </item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="FragmentHeader" parent="Header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SectionHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:alpha">0.70</item>
    </style>

    <style name="Section">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ToolbarBackground">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_width</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:alpha">.25</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="day_selector_day">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ListHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.70</item>
    </style>

    <style name="Card_Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">all</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:alpha">0.70</item>
        <item name="android:textColorLink">@color/blue_dark</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Card_Frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/item_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/item_vertical_margin</item>
        <item name="android:paddingRight">@dimen/item_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/item_vertical_margin</item>
    </style>

    <style name="Card_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/article_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Card_Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Card_Action" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Footer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:paddingBottom">?android:attr/actionBarSize</item>
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>

    <!--  Toolbar  -->
    <style name="Toolbar">
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="AppBar">
        <item name="liftOnScroll">true</item>
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="Toolbar.Text" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
